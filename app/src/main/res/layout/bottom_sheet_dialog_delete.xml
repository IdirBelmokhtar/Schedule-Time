<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:background="@drawable/custom_background_white">

    <TextView
        android:id="@+id/sheet_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Lorem ?"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="24dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blue"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/blue_"
            android:layout_marginTop="12dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:background="@color/blue_"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sheet_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            style="@style/Theme.ScheduleTime.LinearLayout.ListItem.CircleClickable">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/blue"
                android:textSize="18sp"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:paddingVertical="4dp"
            android:background="@color/blue_"/>

        <LinearLayout
            android:id="@+id/sheet_dialog_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            style="@style/Theme.ScheduleTime.LinearLayout.ListItem.CircleClickable">

            <TextView
                android:id="@+id/sheet_dialog_delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/delete"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>