<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/Theme.AppCompat.custom_background">

            <TextView
                android:id="@+id/sheet_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_lorem"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center_horizontal"
                style="@style/Theme.AppCompat.Textview"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:paddingVertical="4dp"
                    android:layout_marginHorizontal="8dp"
                    style="@style/Theme.AppCompat.View"
                    android:layout_marginTop="12dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingVertical="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    style="@style/Theme.AppCompat.View"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sheet_dialog_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    style="@style/Theme.ScheduleTime.LinearLayout.ListItem.CircleClickable2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        style="@style/Theme.AppCompat.Textview"
                        android:textSize="18sp"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="4dp"
                    style="@style/Theme.AppCompat.View" />

                <LinearLayout
                    android:id="@+id/sheet_dialog_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    style="@style/Theme.ScheduleTime.LinearLayout.ListItem.CircleClickable2">

                    <TextView
                        android:id="@+id/sheet_dialog_delete_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete"
                        android:textColor="@color/delete"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>